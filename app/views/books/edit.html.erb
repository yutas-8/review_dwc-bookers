<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <div id="error_message">
    <h3><%= @book.errors.count %>error prohibited this book from being saved:</h3>
    <div class="error_message_list">
    <% @book.errors.full_messages.each do |message| %>
      <div><%= message %></div>
    <% end %>
    </div>
  </div>
<% end %>
<%= form_with model:@book, local:true do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Body</p>
  <%= f.text_area :body %>
  <p><%= f.submit "Update Book" %></p>
<% end %>
<%= link_to "Show", book_path(@book.id) %>|<%= link_to "Back", books_path %>